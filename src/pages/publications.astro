---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import CardPub from "../components/CardPub";
const research = await getCollection("research");
import { FaNewspaper, FaBoxArchive, FaBox } from "react-icons/fa";
---

<Layout
  title="Resume - Haripriya Sridharan Pure Mathematics Complex Analysis Complex Geometry Research K-theory Oka Principle"
>
  <!-- Pub section start -->
  <div class="container mr-auto ml-auto sm:px-5 md:px-10 lg:px-14">
    <div class="py-12 px-4 md:px-0">
      <!-- resume page title -->
      <h2
        class="relative inline-block text-[2.5rem] dark:text-white font-bold transform after:absolute after:md:w-[12rem] after:left-[12rem] after:h-0.5 after:bg-gradient-to-r after:from-btn-secondary after:to-btn-secondary after:content-[''] after:rounded-md after:top-2/4 after:transform"
      >
        Papers
      </h2>
      <div
        class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-1 gap-x-6 gap-y-6 mt-[30px]"
      >
        <!-- Research  start -->
        <div>
          <div class="flex items-center space-x-2 mb-4">
            <span class="text-6xl text-light-icon">
              <FaNewspaper />
            </span>
            <h4 class="text-[1.625rem] dark:text-white font-medium">
              Research Outputs
            </h4>
          </div>
          {research.map((details) => <CardPub details={details} />)}
        </div>
        <!-- Research end -->

        </div>
    </div>
  </div>
  <!-- resume section end -->
</Layout>
